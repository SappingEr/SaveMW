@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            @if (User.Identity.GetUserId() == "1")
            {
                <li>@Html.ActionLink("Администрирование", "UserList", "Admin")</li>
            }
            <li>
                @Html.ActionLink(User.Identity.GetUserName(), "Info", "User", new { id = User.Identity.GetUserId()}, null)
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">ВЫХОД</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li>@Html.ActionLink("ВХОД", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}

